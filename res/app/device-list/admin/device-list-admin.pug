      td(width="5%")
        table(align="center")
          tr
            td
              button.btn(type='groupRemove', ng-click="clickDeviceGroupRemove()") ->
          tr
            td
              button.btn(type='groupAdd', ng-click="clickDeviceGroupAdd()") <-

      td(width="20%")
